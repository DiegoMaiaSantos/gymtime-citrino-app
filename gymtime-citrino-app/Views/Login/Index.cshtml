@{
    ViewData["Title"] = "Tela de Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow p-4" style="width: 350px;">
        <h3 class="text-center mb-4">Realizar Seu Login</h3>
        <form method="post" asp-action="Login" asp-controller="Account">
            <!-- Email or Username -->
            <div class="form-group mb-3">
                <label for="InputEmail">E-mail ou Nome de Usuário</label>
                <input type="text" id="InputEmail" name="Email" class="form-control" placeholder="Digite seu e-mail ou nome de usuário" required />
            </div>
            <!-- Password -->
            <div class="form-group mb-3">
                <label for="InputPassword">Senha</label>
                <input type="password" id="InputPassword" name="Password" class="form-control" placeholder="Digite sua senha" required />
            </div>
            <!-- Remember Me -->
            <div class="form-check mb-3">
                <input type="checkbox" id="RememberMe" name="RememberMe" class="form-check-input" />
                <label class="form-check-label" for="RememberMe">Lembrar de mim</label>
            </div>
            <!-- Buttons -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Logar</button>
                <a href="/" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
        <!-- Create Account -->
        <div class="mt-3 text-center">
            <p class="mb-0">Não tem uma conta? <a asp-action="Register" asp-controller="Account">Crie uma agora</a></p>
        </div>
    </div>
</div>